read n by n matrix and print sum of diagonal elements 

#include <stdio.h>

int main() {
    int n;
    scanf("%d",&n);
    int a[n][n],i,j;
    for(i=0;i<n;i++)
    {
      for(j=0;j<n;j++)
      {
          scanf("%d",&a[i][j]);
      }
    }
    int s=0;
      for(i=0;i<n;i++)
    {
      for(j=0;j<n;j++)
          if(i+j==n-1)
          s=s+a[i][j];
      }
    printf("%d",s);
    return 0;
}
